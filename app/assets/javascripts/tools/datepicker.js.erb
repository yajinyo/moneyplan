// カレンダー用スクリプト
// カレンダー使用時にインクルードする
//

$(function() {
alert("!!!");
  // 祝日を祝日マスタから取得
  var holidays = [];  // [ '2013-07-08', '2013-08-03', '2012-08-24' ];

  var request = {};
  request.url = SystemHelper.UrlFor("/holidays.json/");
  request.type = "GET";
  request.dataType = "json";

  request.success = function(response) {
    for(var i=0; i<response.length; i++){
      holidays[i] = response[i].ymd;
    }
  };

  request.error = function(response) {
    alert("error!!!");
  };

  $.ajax(request);


  $(".datepicker").datepicker({

    dateFormat: "yy-mm-dd",
    showOn: "button",
    buttonImage: "<%= image_path('calendar.gif') %>",
    // buttonImage: "<%= ENV['RAILS_RELATIVE_URL_ROOT'] %>/assets/calendar.gif",
    // buttonImage: "/assets/css/img/fancybox/fancy_nav_right.png",
    buttonImageOnly: true,

    beforeShowDay: function(date) {
      // 祝日の判定
      for (var i = 0; i < holidays.length; i++) {
        var htime = Date.parse(holidays[i]);    // 祝日を 'YYYY-MM-DD' から time へ変換
        var holiday = new Date();
        holiday.setTime(htime);                 // 上記 time を Date へ設定

        // 祝日
        if (holiday.getYear() == date.getYear() &&
            holiday.getMonth() == date.getMonth() &&
            holiday.getDate() == date.getDate()) {
            return [true, 'holiday'];
        }
      }
      // 日曜日
      if (date.getDay() == 0) {
          return [true, 'sunday'];
      }
      // 土曜日
      if (date.getDay() == 6) {
          return [true, 'saturday'];
      }
      // 平日
      return [true, ''];
    },

    onSelect: function(dateText, inst) {
        $("#date_val").val(dateText);
    }
  });

});
